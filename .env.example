# MongoDB connection URI for the database (Replace with your MongoDB URI)
MONGODB_URI="your-mongodb-connection-uri-here"

# JWT Secret used for signing tokens (Keep this secret, generate a unique string for production)
JWT_SECRET="your-jwt-secret-here"

# JWT Refresh Secret (Another secret for refresh tokens, generate separately)
JWT_REFRESH_SECRET="your-refresh-jwt-secret-here"

# Access Token Expiry duration (Set to '1d' for 1 day, adjust based on your needs)
ACCESS_TOKEN_EXPIRY="1d"

# Refresh Token Expiry duration (Set to '7d' for 7 days, adjust based on your needs)
REFRESH_TOKEN_EXPIRY="7d"

# Cookie Expiry duration for access token (in seconds)
COOKIE_ACCESS_TOKEN_EXPIRY=86400  # 1 day (86400 seconds)

# Cookie Expiry duration for refresh token (in seconds)
COOKIE_REFRESH_TOKEN_EXPIRY=604800  # 7 days (604800 seconds)

# Public API URL (for frontend requests in development, replace with your actual API URL)
NEXT_PUBLIC_API_URL="your-public-api-url-here"

# Backend API URL (for server-side requests in development, replace with your actual API URL)
API_URL="your-backend-api-url-here"  # Local URL, change this for production

# Node environment (development or production, make sure to set correctly in deployment)
NODE_ENV="development"
# NODE_ENV="production" # Un-comment this line for production builds
